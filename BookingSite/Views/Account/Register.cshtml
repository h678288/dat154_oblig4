@model WebApplication1.ViewModels.RegisterGuestViewModel

<h2>Register as Guest</h2>
<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Tlf"></label>
        <input asp-for="Tlf" class="form-control" />
        <span asp-validation-for="Tlf" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Passord"></label>
        <input asp-for="Passord" type="password" class="form-control" />
        <span asp-validation-for="Passord" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>